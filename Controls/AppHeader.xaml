<UserControl x:Class="MonitoringApp.Controls.AppHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="80" Background="#005B8E">
    <Grid Margin="20,0,20,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        
        <Image Source="/MonitoringApp;component/Assets/CCI.jpg" Grid.Column="0" Height="60" VerticalAlignment="Center"/>
        
        <TextBlock Grid.Column="1" Text="MACHINE UPTIME MONITORING" Foreground="White" FontSize="34" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <Border Grid.Column="2" Background="#1A76A3" CornerRadius="10" Padding="10" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock x:Name="TxtDate" Foreground="White" FontSize="16" HorizontalAlignment="Center"/>
                
                <TextBlock x:Name="TxtTime" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
