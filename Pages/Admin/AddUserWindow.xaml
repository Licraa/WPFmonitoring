<Window x:Class="MonitoringApp.Pages.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New User" Height="474" Width="352"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F9FAFB" FontFamily="Segoe UI">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style TargetType="Border" x:Key="InputBorderStyle">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0,0,5,5">
        <Border Margin="25" Background="White" CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.05" BlurRadius="20"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" Margin="25">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                    <Border Width="4" Height="24" Background="#2563EB" CornerRadius="2" Margin="0,0,10,0"/>
                    <TextBlock Text="Add New User" FontSize="20" FontWeight="Bold" Foreground="#111827"/>
                </StackPanel>

                <TextBlock Text="Username" Style="{StaticResource LabelStyle}"/>
                <Border Style="{StaticResource InputBorderStyle}">
                    <TextBox x:Name="txtUsername" BorderThickness="0" Background="Transparent" 
                             VerticalContentAlignment="Center" Padding="8,6" Height="30"/>
                </Border>

                <TextBlock Text="Password" Style="{StaticResource LabelStyle}"/>
                <Border Style="{StaticResource InputBorderStyle}">
                    <PasswordBox x:Name="txtPassword" BorderThickness="0" Background="Transparent" 
                                 VerticalContentAlignment="Center" Padding="8,6" Height="30"/>
                </Border>

                <TextBlock Text="Role / Access Level" Style="{StaticResource LabelStyle}"/>
                <Border Style="{StaticResource InputBorderStyle}" Background="#F3F4F6">
                    <ComboBox x:Name="comboRole" BorderThickness="0" Background="Transparent" 
                              Height="30" Padding="8,6" IsEnabled="False" Foreground="#6B7280">
                        <ComboBoxItem Content="User" IsSelected="True"/>
                    </ComboBox>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Cancel" Click="BtnCancel_Click" 
                            Background="Transparent" Foreground="#6B7280" BorderThickness="0"
                            FontWeight="SemiBold" Cursor="Hand" Margin="0,0,15,0"/>

                    <Button Content="Create Account" Click="BtnSave_Click" 
                            Width="130" Height="40" Cursor="Hand"
                            Background="#2563EB" Foreground="White" FontWeight="Bold" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>