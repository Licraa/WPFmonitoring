<UserControl x:Class="MonitoringApp.Pages.DashboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="#F2F2F2">

    <UserControl.Resources>
        <SolidColorBrush x:Key="ActiveBrush" Color="#2E7D32"/>
        <SolidColorBrush x:Key="InactiveBrush" Color="#C62828"/>

        <Style x:Key="CardInnerPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="BorderBrush" Value="#E6E6E6"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="0,0,0,20" Padding="15" Background="White" CornerRadius="10" BorderBrush="#CCCCCC" BorderThickness="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Margin="40,0">
                    <TextBlock Text="{Binding Active}" Foreground="Green" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Connected" FontSize="14" HorizontalAlignment="Center" Foreground="#666"/>
                </StackPanel>
                <StackPanel Margin="40,0">
                    <TextBlock Text="{Binding Inactive}" Foreground="Red" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Disconnected" FontSize="14" HorizontalAlignment="Center" Foreground="#666"/>
                </StackPanel>
                <StackPanel Margin="40,0">
                    <TextBlock Text="{Binding TotalMachine}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#333"/>
                    <TextBlock Text="Total Machines" FontSize="14" HorizontalAlignment="Center" Foreground="#666"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="cardContainer" ItemsSource="{Binding DashboardCollection}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="15" Padding="20" Margin="0,0,20,20" BorderThickness="1" BorderBrush="#BFBFBF" Width="300" Cursor="Hand" MouseLeftButtonUp="Card_MouseLeftButtonUp">
                            <StackPanel HorizontalAlignment="Center">

                                <TextBlock Text="{Binding lineProduction}" FontSize="22" FontWeight="Bold" Margin="0,0,0,15" HorizontalAlignment="Center" Foreground="#111"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                                    <StackPanel Width="100" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Active}" Foreground="Green" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Active" FontSize="12" HorizontalAlignment="Center" Foreground="#666"/>
                                    </StackPanel>
                                    <StackPanel Width="100" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Inactive}" Foreground="Red" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Inactive" FontSize="12" HorizontalAlignment="Center" Foreground="#666"/>
                                    </StackPanel>
                                </StackPanel>

                                <Border Background="#FAFAFA" BorderThickness="1" BorderBrush="#DDDDDD" CornerRadius="10" Padding="15" Margin="5" Width="240">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="COUNT" Foreground="#555"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Count}" FontWeight="Bold"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="PART/HR" Foreground="#555"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PartHours, StringFormat={}{0:F1}}" FontWeight="Bold"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="CYCLE" Foreground="#555"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Cycle, StringFormat={}{0:F1}s}" FontWeight="Bold"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="AVG CYCLE" Foreground="#555"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding AvgCycle, StringFormat={}{0:F1}s}" FontWeight="Bold"/>

                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="DOWNTIME" Foreground="#555"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding DowntimePercent, StringFormat={}{0:F1}%}" FontWeight="Bold"/>

                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="UPTIME" Foreground="#555"/>
                                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding UptimePercent, StringFormat={}{0:F1}%}" FontWeight="Bold"/>
                                    </Grid>
                                </Border>

                                <TextBlock Text="{Binding TotalMachine, StringFormat={}{0} Total Machine}" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="#333"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>