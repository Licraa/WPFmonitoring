<UserControl x:Class="MonitoringApp.Pages.DashboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1000"
             Background="#F3F4F6">

    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow" Color="Black" Opacity="0.06" BlurRadius="15" ShadowDepth="4" Direction="270"/>

        <Style x:Key="HealthCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Height" Value="180"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <Style x:Key="StatusPill" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,35">
            <TextBlock Text="System Health Overview" FontSize="32" FontWeight="Bold" Foreground="#111827"/>
            <TextBlock Text="Real-time monitoring of application services and hardware resources." FontSize="16" Foreground="#6B7280" Margin="0,5,0,0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <UniformGrid Columns="2" Margin="0,0,20,0">

                <Border Style="{StaticResource HealthCardStyle}">
                    <Grid>
                        <Border Style="{StaticResource StatusPill}" Background="{Binding DbStatusColor}">
                            <TextBlock Text="{Binding DbStatusText}" Foreground="White" FontSize="11" FontWeight="Bold"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <Border Width="50" Height="50" CornerRadius="25" Background="#EFF6FF" HorizontalAlignment="Left" Margin="0,0,0,15">
                                <TextBlock Text="🗄️" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Database Server" FontSize="14" FontWeight="SemiBold" Foreground="#6B7280"/>
                            <TextBlock Text="{Binding DbName}" FontSize="20" FontWeight="Bold" Foreground="#1F2937" Margin="0,4,0,0"/>
                            <TextBlock Text="SQL Connection" FontSize="12" Foreground="#9CA3AF" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource HealthCardStyle}">
                    <Grid>
                        <Border Style="{StaticResource StatusPill}" Background="{Binding SerialStatusColor}">
                            <TextBlock Text="{Binding SerialStatusText}" Foreground="White" FontSize="11" FontWeight="Bold"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <Border Width="50" Height="50" CornerRadius="25" Background="#ECFDF5" HorizontalAlignment="Left" Margin="0,0,0,15">
                                <TextBlock Text="🔌" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Serial Interface" FontSize="14" FontWeight="SemiBold" Foreground="#6B7280"/>
                            <TextBlock Text="{Binding ActivePort}" FontSize="20" FontWeight="Bold" Foreground="#1F2937" Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding LastDataTime}" FontSize="12" Foreground="#9CA3AF" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource HealthCardStyle}">
                    <Grid>
                        <StackPanel VerticalAlignment="Center">
                            <Border Width="50" Height="50" CornerRadius="25" Background="#FFF7ED" HorizontalAlignment="Left" Margin="0,0,0,15">
                                <TextBlock Text="⏱️" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Current Shift" FontSize="14" FontWeight="SemiBold" Foreground="#6B7280"/>
                            <TextBlock Text="{Binding CurrentShift}" FontSize="20" FontWeight="Bold" Foreground="#1F2937" Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding SystemTime}" FontSize="12" Foreground="#9CA3AF" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource HealthCardStyle}">
                    <Grid>
                        <Button Content="Open Folder" Click="BtnOpenLogs_Click" 
                                HorizontalAlignment="Right" VerticalAlignment="Top"
                                Background="White" BorderBrush="#E5E7EB" BorderThickness="1" 
                                Foreground="#374151" FontSize="11" FontWeight="SemiBold"
                                Padding="12,6" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <StackPanel VerticalAlignment="Center">
                            <Border Width="50" Height="50" CornerRadius="25" Background="#F3F4F6" HorizontalAlignment="Left" Margin="0,0,0,15">
                                <TextBlock Text="📂" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Log Storage Usage" FontSize="14" FontWeight="SemiBold" Foreground="#6B7280"/>
                            <TextBlock Text="{Binding LogSize}" FontSize="20" FontWeight="Bold" Foreground="#1F2937" Margin="0,4,0,0"/>
                            <TextBlock Text="Local CSV &amp; Reports" FontSize="12" Foreground="#9CA3AF" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource HealthCardStyle}">
                    <Grid>
                        <StackPanel VerticalAlignment="Center">
                            <Border Width="50" Height="50" CornerRadius="25" Background="#FEF2F2" HorizontalAlignment="Left" Margin="0,0,0,15">
                                <TextBlock Text="💻" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="CPU Load" FontSize="14" FontWeight="SemiBold" Foreground="#6B7280"/>
                            <TextBlock Text="{Binding CpuUsage}" FontSize="20" FontWeight="Bold" Foreground="#1F2937" Margin="0,4,0,0"/>
                            <TextBlock Text="Total Processor Time" FontSize="12" Foreground="#9CA3AF" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource HealthCardStyle}">
                    <Grid>
                        <StackPanel VerticalAlignment="Center">
                            <Border Width="50" Height="50" CornerRadius="25" Background="#F0F9FF" HorizontalAlignment="Left" Margin="0,0,0,15">
                                <TextBlock Text="🧠" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Memory Available" FontSize="14" FontWeight="SemiBold" Foreground="#6B7280"/>
                            <TextBlock Text="{Binding RamUsage}" FontSize="20" FontWeight="Bold" Foreground="#1F2937" Margin="0,4,0,0"/>
                            <TextBlock Text="System RAM Free" FontSize="12" Foreground="#9CA3AF" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

            </UniformGrid>
        </ScrollViewer>
    </Grid>
</UserControl>