<Window x:Class="MonitoringApp.Pages.AddMachineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Machine" Height="600" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F9FAFB">

    <Border Padding="25">
        <StackPanel>
            <TextBlock Text="Add New Machine" FontSize="20" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,20"/>

            <TextBlock Text="Machine Name" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,5"/>
            <TextBox x:Name="txtName" Height="35" Padding="5" Margin="0,0,0,15" BorderBrush="#D1D5DB"/>

            <TextBlock Text="Process Name" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,5"/>
            <TextBox x:Name="txtProcess" Height="35" Padding="5" Margin="0,0,0,15" BorderBrush="#D1D5DB"/>

            <TextBlock Text="Line Location" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,5"/>
            <TextBox x:Name="txtLine" Height="35" Padding="5" Margin="0,0,0,15" BorderBrush="#D1D5DB"/>
            
            <TextBlock Text="Remark (Optional)" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,5"/>
            <TextBox x:Name="txtRemark" Height="35" Padding="5" Margin="0,0,0,25" BorderBrush="#D1D5DB"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Click="BtnCancel_Click" Width="80" Height="35" Margin="0,0,10,0" Background="White" BorderBrush="#D1D5DB" Foreground="#374151"/>
                <Button Content="Create Machine" Click="BtnSave_Click" Width="130" Height="35" Background="#2563EB" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>