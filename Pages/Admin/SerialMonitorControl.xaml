<UserControl x:Class="MonitoringApp.Pages.SerialMonitorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="1000"
             Background="#F3F4F6">

    <UserControl.Resources>
        <Style x:Key="ActionBtn" TargetType="Button">
            <Setter Property="Padding" Value="15,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Serial Monitor &amp; Data Logger" FontSize="22" FontWeight="Bold" Foreground="#111827"/>
            <TextBlock Text="Real-time serial data acquisition, processing, and database injection" Foreground="#6B7280" FontSize="12" Margin="0,4,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15" BorderBrush="#E5E7EB" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="PORT" FontSize="10" FontWeight="Bold" Foreground="#9CA3AF" Margin="0,0,0,4"/>
                        <ComboBox x:Name="comboPorts" Width="120"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="BAUD RATE" FontSize="10" FontWeight="Bold" Foreground="#9CA3AF" Margin="0,0,0,4"/>
                        <ComboBox x:Name="comboBaud" Width="100">
                            <ComboBoxItem Content="9600"/>
                            <ComboBoxItem Content="19200"/>
                            <ComboBoxItem Content="38400"/>
                            <ComboBoxItem Content="57600"/>
                            <ComboBoxItem Content="115200" IsSelected="True"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="20,0,0,0">
                    <Button x:Name="btnStart" Content="â–¶ START" Background="#10B981" Click="BtnStart_Click" Style="{StaticResource ActionBtn}" Height="24" Width="60"/>
                    <Button x:Name="btnStop" Content="â–  STOP" Background="#EF4444" Click="BtnStop_Click" IsEnabled="False" Style="{StaticResource ActionBtn}" Height="24" Width="60"/>
                    <Button x:Name="btnClear" Content="ðŸ—‘ CLEAR" Background="#6B7280" Click="BtnClear_Click" Style="{StaticResource ActionBtn}" Width="64" Height="24"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                    <CheckBox x:Name="chkShowLog" 
                              Content="Show Live Log (Debug)" 
                              Foreground="#6B7280" 
                              FontSize="12" 
                              FontWeight="SemiBold"
                              VerticalContentAlignment="Center"
                              Checked="ChkShowLog_Checked"
                              Unchecked="ChkShowLog_Unchecked"/>
                </StackPanel>

                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="CONNECTION STATUS" FontSize="10" FontWeight="Bold" Foreground="#9CA3AF"/>
                    <TextBlock x:Name="txtStatus" Text="Idle" FontWeight="Bold" Foreground="#374151" FontSize="14" HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="#1F2937" CornerRadius="8,8,0,0" Padding="10">
                    <TextBlock Text="RAW SERIAL TERMINAL" Foreground="#E5E7EB" FontWeight="Bold" FontSize="11"/>
                </Border>

                <Border Grid.Row="1" Background="#111827" CornerRadius="0,0,8,8" Padding="5">
                    <ListBox x:Name="listBoxLogs" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             Foreground="#00FF00" 
                             FontFamily="Consolas" 
                             FontSize="12"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
                </Border>
            </Grid>

            <Border Grid.Column="2" Background="White" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="SYSTEM STATUS" FontSize="11" FontWeight="Bold" Foreground="#9CA3AF" Margin="0,0,0,10"/>

                        <WrapPanel Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,10">
                                <Ellipse x:Name="dbStatusIndicator" Width="10" Height="10" Fill="#EF4444" Margin="0,0,8,0"/>
                                <TextBlock x:Name="txtDbStatus" Text="Disconnected" FontWeight="Bold" Foreground="#374151" FontSize="12" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <Button x:Name="btnDbConnect" Content="Connect" Click="BtnDbConnect_Click" 
                                        Background="#3B82F6" Height="24" FontSize="10" Padding="8,0" Style="{StaticResource ActionBtn}" Width="63"/>
                            </StackPanel>

                            <Border Background="#E0F2FE" CornerRadius="4" Padding="8,4" BorderBrush="#BAE6FD" BorderThickness="1" Margin="0,0,0,10" Width="87">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="â± " FontSize="11" Foreground="#0284C7"/>
                                    <TextBlock x:Name="txtCurrentShift" Text="Loading..." FontWeight="Bold" Foreground="#0284C7" FontSize="11"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>
                    </StackPanel>

                    <Separator Grid.Row="1" Margin="0,0,0,10"/>

                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="SAVED EVENTS LOG" FontSize="11" FontWeight="Bold" Foreground="#9CA3AF" Margin="0,0,0,5"/>
                        <ListBox Grid.Row="1" x:Name="listBoxFilteredData" 
                                 BorderThickness="0" 
                                 FontFamily="Segoe UI" 
                                 FontSize="11"
                                 Background="#F9FAFB"/>
                    </Grid>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</UserControl>
