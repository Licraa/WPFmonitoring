<Window x:Class="MonitoringApp.Pages.EditMachineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Machine Configuration" Height="1020" Width="575"
        WindowStartupLocation="CenterScreen" Background="#F3F4F6"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="InputLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" CornerRadius="6" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="true">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3B82F6"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="10" ShadowDepth="2" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="25">
            <StackPanel>

                <DockPanel LastChildFill="False" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Machine Configuration" FontSize="20" FontWeight="Bold" Foreground="#111827"/>
                        <TextBlock Text="Update machine details and parameters" FontSize="13" Foreground="#6B7280" Margin="0,4,0,0"/>
                    </StackPanel>

                    <Border DockPanel.Dock="Right" CornerRadius="20" Padding="12,4" VerticalAlignment="Top">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#FEE2E2"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="Active">
                                        <Setter Property="Background" Value="#DCFCE7"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding Status}" FontWeight="Bold" FontSize="12">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#B91C1C"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Active">
                                            <Setter Property="Foreground" Value="#15803D"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                </DockPanel>

                <Border Style="{StaticResource CardPanel}">
                    <StackPanel>
                        <TextBlock Text="IDENTITY" FontSize="11" FontWeight="Bold" Foreground="#9CA3AF" Margin="0,0,0,15" />

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="System ID (DB)" Style="{StaticResource InputLabel}"/>
                                <TextBlock Text="{Binding Id, StringFormat='#{0}'}" FontWeight="Bold" Foreground="#374151" FontSize="14" Margin="5,0,0,0"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                <TextBlock Text="Last Update" Style="{StaticResource InputLabel}" HorizontalAlignment="Right"/>
                                <TextBlock Text="{Binding LastUpdate}" FontSize="12" Foreground="#6B7280" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>

                        <Separator Background="#F3F4F6" Margin="0,0,0,15"/>

                        <TextBlock Text="Arduino ID (Machine Code)" Style="{StaticResource InputLabel}"/>
                        <TextBox x:Name="txtMachineCode" Text="{Binding MachineCode}" Margin="0,0,0,15"/>

                        <TextBlock Text="Machine Name" Style="{StaticResource InputLabel}"/>
                        <TextBox x:Name="txtName" Text="{Binding Name}" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardPanel}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Line Location" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtLine" Text="{Binding Line}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Process Name" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtProcess" Text="{Binding Process}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource CardPanel}" Padding="0">
                    <UniformGrid Columns="3">
                        <Border BorderBrush="#F3F4F6" BorderThickness="0,0,1,0" Padding="15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="PART/HR" FontSize="10" FontWeight="Bold" Foreground="#9CA3AF" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding PartHours}" FontSize="18" FontWeight="Bold" Foreground="#374151" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border BorderBrush="#F3F4F6" BorderThickness="0,0,1,0" Padding="15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="CYCLE" FontSize="10" FontWeight="Bold" Foreground="#9CA3AF" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding Cycle}" FontSize="18" FontWeight="Bold" Foreground="#374151" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Padding="15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="AVG CYCLE" FontSize="10" FontWeight="Bold" Foreground="#9CA3AF" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding AvgCycle}" FontSize="18" FontWeight="Bold" Foreground="#374151" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </Border>

                <Border Style="{StaticResource CardPanel}">
                    <StackPanel>
                        <TextBlock Text="SHIFT PERFORMANCE" FontSize="11" FontWeight="Bold" Foreground="#9CA3AF" Margin="0,0,0,15" />

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Row="0" Grid.Column="1" Background="#F9FAFB" Padding="5">
                                <TextBlock Text="COUNT" FontSize="10" FontWeight="Bold" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="2" Background="#F9FAFB" Padding="5">
                                <TextBlock Text="DOWNTIME" FontSize="10" FontWeight="Bold" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="3" Background="#F9FAFB" Padding="5">
                                <TextBlock Text="UPTIME" FontSize="10" FontWeight="Bold" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            </Border>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="1st" FontWeight="Bold" Foreground="#374151" VerticalAlignment="Center" Margin="5,10,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Shift1.Count}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Shift1.Downtime}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#EF4444"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Shift1.Uptime}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#10B981"/>
                            <Border Grid.Row="1" Grid.ColumnSpan="4" BorderBrush="#F3F4F6" BorderThickness="0,0,0,1" VerticalAlignment="Bottom"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="2nd" FontWeight="Bold" Foreground="#374151" VerticalAlignment="Center" Margin="5,10,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Shift2.Count}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding Shift2.Downtime}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#EF4444"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding Shift2.Uptime}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#10B981"/>
                            <Border Grid.Row="2" Grid.ColumnSpan="4" BorderBrush="#F3F4F6" BorderThickness="0,0,0,1" VerticalAlignment="Bottom"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="3rd" FontWeight="Bold" Foreground="#374151" VerticalAlignment="Center" Margin="5,10,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Shift3.Count}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding Shift3.Downtime}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#EF4444"/>
                            <TextBlock Grid.Row="3" Grid.Column="3" Text="{Binding Shift3.Uptime}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#10B981"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <TextBlock Text="Additional Notes (Remark)" Style="{StaticResource InputLabel}"/>
                <TextBox x:Name="txtRemark" Text="{Binding Remark}" Height="80" 
                         TextWrapping="Wrap" AcceptsReturn="True" VerticalContentAlignment="Top" 
                         Margin="0,0,0,25"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Cancel" Click="BtnCancel_Click" Cursor="Hand" Background="White" Foreground="#4B5563" BorderBrush="#D1D5DB" BorderThickness="1" Height="45" FontWeight="SemiBold">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="2" Content="Save Changes" Click="BtnSave_Click" Cursor="Hand" Background="#005B8E" Foreground="White" BorderThickness="0" Height="45" FontWeight="Bold">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#005B8E" Opacity="0.3" BlurRadius="10" ShadowDepth="3"/>
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>