<Window x:Class="MonitoringApp.Pages.EditMachineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Machine" Height="650" Width="480"
        WindowStartupLocation="CenterScreen" Background="#F2F2F2">

    <Window.Resources>
        <Style x:Key="CardInnerPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="BorderBrush" Value="#E6E6E6"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="4"/>
            <Setter Property="BorderBrush" Value="#2563EB"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="EDIT MODE" Foreground="#666" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <Border Background="#F3F4F6" CornerRadius="6" Padding="10,5" HorizontalAlignment="Center" Margin="0,0,0,15" BorderBrush="#E5E7EB" BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="MACHINE ID: " FontSize="12" FontWeight="Bold" Foreground="#9CA3AF"/>
                        <TextBlock Text="{Binding Id}" FontSize="12" FontWeight="Bold" Foreground="#4B5563"/>
                    </StackPanel>
                </Border>

                <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                    <TextBox x:Name="txtName" Text="{Binding Name}" FontSize="24" FontWeight="Bold" Foreground="#111" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Margin="0,0,0,10"/>

                    <Border CornerRadius="10" Padding="15,4" HorizontalAlignment="Center">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#C62828"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="Active">
                                        <Setter Property="Background" Value="#2E7D32"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding Status}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                    </Border>
                </StackPanel>

                <Border Style="{StaticResource CardInnerPanel}" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Background="#F6D6D6" BorderBrush="#E6BDBD" Padding="6">
                            <TextBlock Text="LINE" FontWeight="Bold" HorizontalAlignment="center"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="1" Background="#F6D6D6" BorderBrush="#E6BDBD" Padding="6">
                            <TextBlock Text="PROCESS" FontWeight="Bold" HorizontalAlignment="center"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="2" Background="#F6D6D6" BorderBrush="#E6BDBD" Padding="6">
                            <TextBlock Text="LAST UPDATE" FontWeight="Bold" HorizontalAlignment="center"/>
                        </Border>

                        <Border Grid.Row="1" Grid.Column="0" Padding="8" BorderBrush="#EDEDED" BorderThickness="0,0,1,0">
                            <TextBox x:Name="txtLine" Text="{Binding Line}" FontWeight="Bold" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="1" Padding="8" BorderBrush="#EDEDED" BorderThickness="0,0,1,0">
                            <TextBox x:Name="txtProcess" Text="{Binding Process}" FontWeight="Bold" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="2" Padding="8">
                            <TextBlock Text="{Binding LastUpdate}" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="#555"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Style="{StaticResource CardInnerPanel}" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="PART/HR" FontSize="12" FontWeight="Bold" Foreground="#333"/>
                            <TextBlock Text="{Binding PartHours}" FontSize="14" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="CYCLE" FontSize="12" FontWeight="Bold" Foreground="#333"/>
                            <TextBlock Text="{Binding Cycle}" FontSize="14" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="AVG CYCLE" FontSize="12" FontWeight="Bold" Foreground="#333"/>
                            <TextBlock Text="{Binding AvgCycle}" FontSize="14" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource CardInnerPanel}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Background="#F6D6D6" BorderBrush="#E6BDBD" Padding="6">
                            <TextBlock Text="SHIFT" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="1" Background="#F6D6D6" BorderBrush="#E6BDBD" Padding="6" BorderThickness="1,0,1,0">
                            <TextBlock Text="COUNT" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="2" Background="#F6D6D6" BorderBrush="#E6BDBD" Padding="6" BorderThickness="1,0,1,0">
                            <TextBlock Text="DOWNTIME" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="3" Background="#F6D6D6" BorderBrush="#E6BDBD" Padding="6" BorderThickness="1,0,0,0">
                            <TextBlock Text="UPTIME" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </Border>

                        <Border Grid.Row="1" Grid.Column="0" Padding="6" BorderBrush="#EDEDED" BorderThickness="0,1,1,1">
                            <TextBlock Text="1st" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="1" Padding="6" BorderBrush="#EDEDED" BorderThickness="0,1,1,1">
                            <TextBlock Text="{Binding Shift1.Count}" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="2" Padding="6" BorderBrush="#EDEDED" BorderThickness="0,1,1,1">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Shift1.Downtime}" Foreground="#333"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="3" Padding="6" BorderBrush="#EDEDED" BorderThickness="0,1,1,1">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Shift1.Uptime}" Foreground="#333"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="2" Grid.Column="0" Padding="6" BorderBrush="#EDEDED" BorderThickness="0,0,1,1">
                            <TextBlock Text="2nd" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="2" Grid.Column="1" Padding="6" BorderBrush="#EDEDED" BorderThickness="0,0,1,1">
                            <TextBlock Text="{Binding Shift2.Count}" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="2" Grid.Column="2" Padding="6" BorderBrush="#EDEDED" BorderThickness="0,0,1,1">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Shift2.Downtime}" Foreground="#333"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Row="2" Grid.Column="3" Padding="6" BorderBrush="#EDEDED" BorderThickness="0,0,0,1">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Shift2.Uptime}" Foreground="#333"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="3" Grid.Column="0" Padding="6" BorderBrush="#EDEDED" BorderThickness="0,0,1,0">
                            <TextBlock Text="3rd" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="3" Grid.Column="1" Padding="6" BorderBrush="#EDEDED" BorderThickness="0,0,1,0">
                            <TextBlock Text="{Binding Shift3.Count}" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="3" Grid.Column="2" Padding="6" BorderBrush="#EDEDED" BorderThickness="0,0,1,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Shift3.Downtime}" Foreground="#333"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Row="3" Grid.Column="3" Padding="6" BorderBrush="#EDEDED" BorderThickness="0,0,0,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Shift3.Uptime}" Foreground="#333"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Remark:" Foreground="#111" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtRemark" Text="{Binding Remark}" Height="60" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"
                             BorderBrush="#999" BorderThickness="1" Background="White" Padding="5"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Cancel" Click="BtnCancel_Click" Width="100" Padding="10" Margin="0,0,10,0" Background="#EEE" BorderBrush="#CCC" BorderThickness="1"/>
                    <Button Content="Save Changes" Click="BtnSave_Click" Width="120" Padding="10" Background="#005B8E" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>