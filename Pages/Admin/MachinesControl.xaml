<UserControl x:Class="MonitoringApp.Pages.MachinesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="#F3F4F6">

    <Grid Margin="30">

        <Grid x:Name="GridLines" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Production Lines Overview" FontSize="26" FontWeight="Bold" Foreground="#111827"/>
                    <TextBlock Text="Select a production line to view detailed machine status." Foreground="#6B7280" FontSize="14" Margin="0,6,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Click="BtnCheckIds_Click" Height="45" Margin="0,0,15,0"
                            Background="White" Foreground="#4B5563" BorderBrush="#D1D5DB" BorderThickness="1"
                            Padding="15,0" Cursor="Hand" ToolTip="View deleted/available IDs">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="🔍" Margin="0,0,8,0"/>
                            <TextBlock Text="Check Empty IDs" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <Button Click="BtnAddMachine_Click" Height="45"
                            Background="#2563EB" Foreground="White" BorderThickness="0"
                            Padding="20,0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="+" FontWeight="Bold" FontSize="16" Height="26" Width="16"/>
                            <TextBlock Text="Add New" FontWeight="SemiBold" Height="20" Width="73" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                <ItemsControl x:Name="ListLines">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="280" Height="170" Margin="0,0,20,20" Background="White" CornerRadius="12" BorderBrush="#E5E7EB" BorderThickness="1" Cursor="Hand" MouseLeftButtonUp="LineCard_Click">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" Opacity="0.04" BlurRadius="8" ShadowDepth="2"/>
                                </Border.Effect>
                                <Grid Margin="20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Border Background="#EEF2FF" CornerRadius="8" Padding="10">
                                            <TextBlock Text="🏭" FontSize="18"/>
                                        </Border>
                                        <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding LineName}" FontSize="18" FontWeight="Bold" Foreground="#374151"/>
                                            <TextBlock Text="Production Line" FontSize="11" Foreground="#9CA3AF"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,15,0,0">
                                        <StackPanel Margin="0,0,25,0">
                                            <TextBlock Text="{Binding ActiveCount}" FontSize="24" FontWeight="Bold" Foreground="#10B981"/>
                                            <TextBlock Text="Running" FontSize="11" Foreground="#6B7280" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <StackPanel Margin="0,0,25,0">
                                            <TextBlock Text="{Binding InactiveCount}" FontSize="24" FontWeight="Bold" Foreground="#EF4444"/>
                                            <TextBlock Text="Stopped" FontSize="11" Foreground="#6B7280" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="{Binding TotalCount}" FontSize="24" FontWeight="Bold" Foreground="#374151"/>
                                            <TextBlock Text="Total" FontSize="11" Foreground="#6B7280" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <TextBlock Grid.Row="2" Text="Click to view details →" FontSize="11" FontWeight="SemiBold" Foreground="#3B82F6" HorizontalAlignment="Right" Margin="0,5,0,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>


        <Grid x:Name="GridMachines" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <Button Content="← Back to All Lines" Click="BtnBack_Click" HorizontalAlignment="Left" Background="Transparent" Foreground="#6B7280" BorderThickness="0" Margin="-10,0,0,5" Cursor="Hand" FontWeight="Bold" FontSize="13"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="txtSelectedLine" Text="Line A Machines" FontSize="24" FontWeight="Bold" Foreground="#111827"/>
                    <Border Background="#DBEAFE" CornerRadius="12" Padding="10,2" Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock x:Name="txtTotalMachinesDetail" Text="0 Machines" FontSize="12" FontWeight="Bold" Foreground="#1E40AF"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ListMachines">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="280" Margin="0,0,15,15" CornerRadius="8" BorderThickness="1" Padding="15" Background="White">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" Opacity="0.03" BlurRadius="5" ShadowDepth="1"/>
                                </Border.Effect>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="#FCA5A5"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="Active">
                                                <Setter Property="BorderBrush" Value="#6EE7B7"/>
                                                <Setter Property="Background" Value="#F0FDF4"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Foreground="#1F2937" TextTrimming="CharacterEllipsis" MaxWidth="160" ToolTip="{Binding Name}"/>

                                            <Border Background="#F3F4F6" CornerRadius="4" Padding="6,2" Margin="8,0,0,0" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Id, StringFormat='ID: {0}'}" FontSize="10" FontWeight="Bold" Foreground="#6B7280" Margin="0,0,6,0"/>

                                                    <TextBlock Text="|" FontSize="10" Foreground="#D1D5DB" Margin="0,0,6,0"/>

                                                    <TextBlock Text="{Binding MachineCode, StringFormat='CODE: {0}'}" FontSize="10" FontWeight="Bold" Foreground="#6B7280"/>
                                                </StackPanel>
                                            </Border>

                                        </StackPanel>

                                        <Button Grid.Column="1" Content="✎" Width="24" Height="24" Background="Transparent" BorderThickness="0" Foreground="#9CA3AF" FontWeight="Bold" Cursor="Hand" Click="BtnEditMachine_Click" ToolTip="Edit Machine">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="#2563EB"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <Button Grid.Column="1" Content="🗑" Width="24" Height="24" Margin="50,0,0,0" Background="Transparent" BorderThickness="0" Foreground="#FCA5A5" FontWeight="Bold" Cursor="Hand" Click="BtnDeleteMachine_Click" ToolTip="Delete Machine">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="#DC2626"/>
                                                            <Setter Property="Background" Value="#FEF2F2"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>

                                    <StackPanel Grid.Row="1">
                                        <TextBlock Text="{Binding Process}" FontSize="12" FontWeight="SemiBold" Foreground="#6B7280" Margin="0,0,0,8"/>

                                        <Border CornerRadius="4" Padding="8,3" HorizontalAlignment="Left" Margin="0,0,0,8">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#FEF2F2"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Active">
                                                            <Setter Property="Background" Value="#DCFCE7"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}" FontSize="10" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#B91C1C"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Active">
                                                                <Setter Property="Foreground" Value="#15803D"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Last Update: " FontSize="10" Foreground="#9CA3AF"/>
                                            <TextBlock Text="{Binding LastUpdate}" FontSize="10" Foreground="#6B7280" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>