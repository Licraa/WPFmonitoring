<Window x:Class="MonitoringApp.Pages.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Control Panel" Height="800" Width="1280" 
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">

    <Window.Resources>
        <Style x:Key="SidebarBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0,6,6,0" Margin="0,2,8,2">
                            <StackPanel Orientation="Horizontal" Margin="{TemplateBinding Padding}">
                                <Rectangle x:Name="ActiveIndicator" Width="4" Height="16" Fill="Transparent" Margin="-20,0,12,0"/>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="#1F2937"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#111827">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="24,32,0,40">
                    <TextBlock Text="ADMIN PANEL" Foreground="White" FontSize="20" FontWeight="Bold" />
                    <TextBlock Text="SYSTEM APP" Foreground="#6B7280" FontSize="12" FontWeight="SemiBold" />
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <TextBlock Text="MAIN MENU" Foreground="#4B5563" FontSize="11" FontWeight="Bold" Margin="24,0,0,10"/>

                    <Button x:Name="btnNavDashboard" Content="📊  Dashboard" Style="{StaticResource SidebarBtn}" Click="BtnNavDashboard_Click"/>
                    <Button x:Name="btnNavSerial" Content="🔌  Serial Monitor" Style="{StaticResource SidebarBtn}" Click="BtnNavSerial_Click"/>
                    <Button x:Name="btnNavMachines" Content="🏭  Machines" Style="{StaticResource SidebarBtn}" Click="BtnNavMachines_Click"/>
                    <Button x:Name="btnNavUsers" Content="👥  Manage Users" Style="{StaticResource SidebarBtn}" Click="BtnNavUsers_Click"/>
                    <Button x:Name="btnNavSettings" Content="⚙️  Settings" Style="{StaticResource SidebarBtn}" Click="BtnNavSettings_Click"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,24">
                    <Border Height="1" Background="#1F2937" Margin="20,0,20,16"/>
                    <Button Content="🚪  Logout" Style="{StaticResource SidebarBtn}" Foreground="#EF4444" Click="LogoutButton_Click" Width="248"/>
                    <TextBlock Text="v1.0.0 Stable" Foreground="#374151" FontSize="10" HorizontalAlignment="Center" Margin="0,16,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Column="1" Background="#F3F4F6">
            <ContentControl x:Name="MainContentArea"/>
        </Border>

    </Grid>
</Window>