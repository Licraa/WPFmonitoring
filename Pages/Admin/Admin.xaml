<Window x:Class="MonitoringApp.Pages.Admin.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin" Height="820" Width="1200" Background="#F4F6F8">

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#0B3A5B">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo + Title (left aligned, standard top padding) -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Left" Margin="12,0,8,12">
                    <!-- <Image Source="/MonitoringApp;component/Assets/CCI.jpg" Height="100" Width="80" Stretch="Uniform" Margin="0,0,0,0"/> -->
                    <TextBlock Text=" ADMIN PANEL " Foreground="White" FontSize="24" FontWeight="Bold"  HorizontalAlignment="Left" Margin="15,10,0,0"/>
                </StackPanel>

                <!-- Menu (left aligned, consistent button widths) -->
                <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="center" Margin="8,6,0,0">
                    <Button Content="Dashboard" Margin="0,6" Padding="10" Width="200" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalAlignment="center"/>
                    <Button Content="Machines" Margin="0,6" Padding="10" Width="200" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalAlignment="center"/>
                    <Button Content="Users" Margin="0,6" Padding="10" Width="200" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalAlignment="center"/>
                    <Button Content="Settings" Margin="0,6" Padding="10" Width="200" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalAlignment="center"/>
                    <Button Content="Serial Monitor" Margin="0,6" Padding="10" Width="200" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalAlignment="center" Click="OpenSerialMonitor_Click"/>
                </StackPanel>

                <!-- Logout at bottom, left aligned -->
                <StackPanel Grid.Row="2" Margin="8,24,0,12" HorizontalAlignment="Left">
                    <Button Content="Logout" Padding="10" Width="200" Background="#D32F2F" Foreground="White" BorderThickness="0" Click="LogoutButton_Click" HorizontalAlignment="Left"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main content -->
        <Grid Grid.Column="1" x:Name="RightMainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="64"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top header -->
            <Grid Grid.Row="0" x:Name="DashboardPanel">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="260"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Administrator Dashboard" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Padding = "12,0,0,0"/>
            </Grid>

            <!-- Summary cards -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,12" HorizontalAlignment="Stretch" VerticalAlignment="Top" >
                <Border Background="White" CornerRadius="8" Padding="14" Width="260" BorderBrush="#E6E9EE" BorderThickness="1" Margin="0,0,12,0">
                    <StackPanel HorizontalAlignment="center">
                        <TextBlock Text="Total Machines" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="24" FontSize="28" FontWeight="Bold" Margin="0,6,0,0" />
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="8" Padding="14" Width="260" BorderBrush="#E6E9EE" BorderThickness="1" Margin="0,0,12,0" >
                    <StackPanel HorizontalAlignment="center">
                        <TextBlock Text="Online" FontSize="12" Foreground="#666" />
                        <TextBlock Text="18" FontSize="28" FontWeight="Bold" Margin="0,6,0,0" Foreground="#2E7D32"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="8" Padding="14" Width="260" BorderBrush="#E6E9EE" BorderThickness="1" Margin="0,0,12,0">
                    <StackPanel HorizontalAlignment="center">
                        <TextBlock Text="Offline" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="6" FontSize="28" FontWeight="Bold" Margin="0,6,0,0" Foreground="#D32F2F"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="8" Padding="14" Width="260" BorderBrush="#E6E9EE" BorderThickness="1">
                    <StackPanel HorizontalAlignment="center">
                        <TextBlock Text="Users" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="12" FontSize="28" FontWeight="Bold" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Serial monitor moved to sidebar -> Serial Monitor (dedicated control) -->

            <!-- Main grid: list / details -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Machines" FontSize="16" FontWeight="Bold" Margin="0,8,0,8"/>

                <DataGrid Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,6,0,0" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80" />
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200" />
                        <DataGridTextColumn Header="Line" Binding="{Binding Line}" Width="100" />
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" />
                        <DataGridTextColumn Header="Last Update" Binding="{Binding LastUpdate}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Grid>
    </Grid>
</Window>